PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_HOST=
PUSHER_PORT=443
PUSHER_SCHEME=https
PUSHER_APP_CLUSTER=mt1

VITE_APP_NAME="${APP_NAME}"

# ===========================================
# Stable Diffusion / SDXL AI Configuration
# ===========================================

# API Endpoint (local Automatic1111 or cloud service)
# Local: http://localhost:7860
# RunPod: https://api.runpod.ai/v2/{pod_id}
SD_API_ENDPOINT=http://localhost:7860

# API Key (for cloud services, leave empty for local)
SD_API_KEY=

# Model to use (recommended: sdxl_base_1.0)
SD_MODEL=sdxl_base_1.0

# Generation quality settings
SD_STEPS=30
SD_CFG_SCALE=7.5
SD_SAMPLER="DPM++ 2M Karras"

# Performance settings
SD_TIMEOUT=120
SD_MAX_RETRIES=3

# Storage settings
SD_STORAGE_DISK=public
SD_STORAGE_PATH=ai-cards
VITE_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
VITE_PUSHER_HOST="${PUSHER_HOST}"
VITE_PUSHER_PORT="${PUSHER_PORT}"
VITE_PUSHER_SCHEME="${PUSHER_SCHEME}"
VITE_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"

